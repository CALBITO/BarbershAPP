# Flask Configuration
FLASK_APP=src.app
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/barbershop_db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Firebase Configuration
FIREBASE_PROJECT_ID=barbershapp-6a689
FIREBASE_CREDENTIALS_PATH=config/serviceAccountKey.json
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_STORAGE_BUCKET=barbershapp-6a689.appspot.com

# GIS and Maps Configuration
GIS_QUERY_URL=https://maps2.dcgis.dc.gov/dcgis/rest/services/DCGIS_DATA/Business_Goods_and_Service_WebMercator/MapServer/36/query
GIS_QUERY_PARAMS="where=1=1&outFields=*&outSR=4326&f=json"
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
ARCGIS_API_KEY=your-arcgis-api-key

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# Application Settings
APP_NAME=BarbershAPP
TIMEZONE=UTC
DEFAULT_APPOINTMENT_DURATION=30
MAX_QUEUE_SIZE=50

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000